{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": [],
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "trailingComma": "all",
      "quoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  }
}
